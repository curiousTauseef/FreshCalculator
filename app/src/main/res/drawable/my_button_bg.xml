<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_mediumAnimTime"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#fff" />
            <stroke android:width="4px" android:color="#FF99B5E4" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#cbd0dc" />
            <stroke android:width="4px" android:color="#FF99B5E4" />
        </shape>
    </item>
</selector>
